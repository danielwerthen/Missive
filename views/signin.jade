- var validation = validation || {};
- var user = user || {};
.row
	.span8
		form.form-horizontal(action= '/signin', method='post')
			fieldset
				legend Sign in!
				.control-group( class= validation.email ) 
					label.control-label( for= 'email' ) Email
					.controls
						input.input-xlarge#email(type= 'text', name='email', value=user.email, tabindex=1)
						p.help-block=validation.emailMessage
				.control-group( class= validation.password ) 
					label.control-label( for= 'password' ) Password
					.controls
						input.input-xlarge#password(type= 'password', name='password', tabindex=2)
						p.help-block=validation.passwordMessage
				.form-actions
					button.btn.btn-primary(type= 'submit', tabindex=4) Sign me up!
	.span4
		h3 Enter your email and password
		p And we will be good to go!
