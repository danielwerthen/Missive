- var user = user || {};
.row
	.span8
		form.form-horizontal(action= '/signup', method= 'post')
			fieldset
				legend So you want to sign up, huh?
				.control-group( class= valid('name') ) 
					label.control-label( for= 'name' ) Name
					.controls
						input.input-xlarge#name(type= 'text', name='name', value=user.name, tabindex=1)
						p.help-block=message('name')
				.control-group( class= valid('email') ) 
					label.control-label( for= 'email' ) Email
					.controls
						input.input-xlarge#email(type= 'text', name='email', value=user.email, tabindex=2)
						p.help-block=message('email')
				.control-group( class= valid('password') ) 
					label.control-label( for= 'password' ) Password
					.controls
						input.input-xlarge#password(type= 'password', name='password', tabindex=3)
						p.help-block=message('password')
				.control-group( class= valid('confirm'))
					label.control-label( for= 'confirm' ) Repeat, please!
					.controls
						input.input-xlarge#confirm(type= 'password', name='confirm', tabindex=4)
						p.help-block=message('confirm')
				.form-actions
					button.btn.btn-primary(type= 'submit', tabindex=4) Sign me up!
	.span4
		h3 We just need a few things to get started
		p Name, email, password, confirm. You know the drill!
