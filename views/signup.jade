- var validation = validation || {};
- var user = user || {};
.row
	.span8
		form.form-horizontal(action= '/signup', method= 'post')
			fieldset
				legend So you want to sign up, huh?
				.control-group( class= validation.email ) 
					label.control-label( for= 'email' ) Email
					.controls
						input.input-xlarge#email(type= 'text', name='email', value=user.email, tabindex=1)
						p.help-block=validation.emailMessage
				.control-group( class= validation.password ) 
					label.control-label( for= 'password' ) Password
					.controls
						input.input-xlarge#password(type= 'password', name='password', tabindex=2)
						p.help-block=validation.passwordMessage
				.control-group( class= validation.confirm ) 
					label.control-label( for= 'confirm' ) Repeat, please!
					.controls
						input.input-xlarge#confirm(type= 'password', name='confirm', tabindex=3)
						p.help-block=validation.confirmMessage
				.form-actions
					button.btn.btn-primary(type= 'submit', tabindex=4) Sign me up!
	.span4
		h3 We just need a few things to get started
		p Email, password, confirm. You know the drill!
